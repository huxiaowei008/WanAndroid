<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:focusable="true"
    android:focusableInTouchMode="true">

    <TextView
        android:id="@+id/tv_host_title"
        android:layout_width="0dp"
        android:layout_height="48dp"
        android:background="@color/colorPrimary"
        android:gravity="center"
        android:text="设置服务器地址"
        android:textColor="@color/white"
        android:textSize="@dimen/H6"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/iv_host_back"
        android:layout_width="48dp"
        android:layout_height="48dp"
        android:rotation="180"
        android:tint="@color/white"
        app:srcCompat="@drawable/ic_arrow_right" />

    <TextView
        android:id="@+id/tv1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginLeft="8dp"
        android:text="协议类型:"
        android:textSize="@dimen/body1"
        app:layout_constraintBottom_toBottomOf="@+id/rg_host_agreement"
        app:layout_constraintEnd_toStartOf="@+id/rg_host_agreement"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/rg_host_agreement" />

    <RadioGroup
        android:id="@+id/rg_host_agreement"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="8dp"
        android:layout_marginRight="8dp"
        android:orientation="horizontal"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/tv1"
        app:layout_constraintTop_toBottomOf="@+id/tv_host_title">

        <RadioButton
            android:id="@+id/rb_host_http"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:layout_marginLeft="8dp"
            android:checked="true"
            android:text="http"
            android:textColor="#333333" />

        <RadioButton
            android:id="@+id/rb_host_https"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:layout_marginLeft="16dp"
            android:text="https"
            android:textColor="#333333" />
    </RadioGroup>

    <TextView
        android:id="@+id/tv2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginLeft="8dp"
        android:text="IP地址:"
        android:textSize="@dimen/body1"
        app:layout_constraintBottom_toBottomOf="@+id/et_host_ip"
        app:layout_constraintEnd_toStartOf="@+id/et_host_ip"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/et_host_ip" />

    <EditText
        android:id="@+id/et_host_ip"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="8dp"
        android:background="@drawable/bg_et_line"
        android:digits="0123456789."
        android:padding="4dp"
        android:textSize="@dimen/body1"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/tv2"
        app:layout_constraintTop_toBottomOf="@+id/rg_host_agreement" />

    <TextView
        android:id="@+id/tv3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginLeft="8dp"
        android:text="端口号:"
        android:textSize="@dimen/body1"
        app:layout_constraintBottom_toBottomOf="@+id/et_host_port"
        app:layout_constraintEnd_toStartOf="@+id/et_host_port"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/et_host_port" />

    <EditText
        android:id="@+id/et_host_port"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="8dp"
        android:background="@drawable/bg_et_line"
        android:inputType="number"
        android:padding="4dp"
        android:textSize="@dimen/body1"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/tv3"
        app:layout_constraintTop_toBottomOf="@+id/et_host_ip" />

    <com.google.android.material.button.MaterialButton
        android:id="@+id/btn_host_save"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginLeft="16dp"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="8dp"
        android:layout_marginRight="8dp"
        android:text="保存当前地址"
        android:textColor="@color/white"
        android:textSize="@dimen/body1"
        android:textStyle="bold"
        app:cornerRadius="4dp"
        app:layout_constraintEnd_toStartOf="@+id/btn_host_sure"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/et_host_port" />

    <com.google.android.material.button.MaterialButton
        android:id="@+id/btn_host_sure"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginLeft="8dp"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="16dp"
        android:layout_marginRight="16dp"
        android:text="确定设置地址"
        android:textColor="@color/white"
        android:textSize="@dimen/body1"
        android:textStyle="bold"
        app:cornerRadius="4dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/btn_host_save"
        app:layout_constraintTop_toBottomOf="@+id/et_host_port" />

    <TextView
        android:id="@+id/tv4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="8dp"
        android:layout_marginRight="8dp"
        android:text="长按可以删除"
        android:textColor="#aaaaaa"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/btn_host_sure" />

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/rv_host_record"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginTop="4dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tv4" />
</androidx.constraintlayout.widget.ConstraintLayout>